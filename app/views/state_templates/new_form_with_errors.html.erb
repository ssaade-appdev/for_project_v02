<!-- Validation failure messages -->
<% if @state.present? %>
  <% if @state.errors.any? %>
    <% @state.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new state
</h1>


<hr>

<!-- Form state start -->
<form action="/create_state" method="post">
<!-- Form state end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @state.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create state
  </button>
</form>

<hr>

<a href="/states">
  Go back
</a>

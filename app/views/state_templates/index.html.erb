<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All states
    </h1>

    <a href="/states/new" class="btn btn-block btn-outline-secondary">
      Add a new state
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @states.each do |state| %>
      <tr>
        <!-- Display state.id start -->
        <td>
          <%= state.id %>
        </td>
        <!-- Display state.id end -->

        <!-- Display state.name start -->
        <td>
          <%= state.name %>
        </td>
        <!-- Display state.name end -->

        <!-- Display state.created_at start -->
        <td>
          <%= time_ago_in_words(state.created_at) %> ago
        </td>
        <!-- Display state.created_at end -->

        <!-- Display state.updated_at start -->
        <td>
          <%= time_ago_in_words(state.updated_at) %> ago
        </td>
        <!-- Display state.updated_at end -->

        <td>
          <a href="/states/<%= state.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

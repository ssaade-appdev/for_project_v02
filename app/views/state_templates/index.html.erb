<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All states
    </h1>

    <a href="/states/new" class="btn btn-block btn-outline-secondary">
      Add a new state
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "state_templates/states_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @states.each do |state| %>
      <tr>
        <td>
          <%= state.id %>
        </td>

        <td>
          <%= state.name %>
        </td>

        <td>
          <%= time_ago_in_words(state.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(state.updated_at) %> ago
        </td>

        <td>
          <a href="/states/<%= state.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @states, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

<% if @match.present? %>
  <% if @match.errors.any? %>
    <% @match.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new match
</h1>


<hr>

<form action="/create_match" method="post">

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @match.date %>">
  </div>

  <div class="form-group">
    <label for="start">
      Start
    </label>

    <input type="text" id="start" name="start" class="form-control" value="<%= @match.start %>">
  </div>

  <div class="form-group">
    <label for="end">
      End
    </label>

    <input type="text" id="end" name="end" class="form-control" value="<%= @match.end %>">
  </div>

  <div class="form-group">
    <label for="sender_availability_id">
      Sender availability
    </label>

    <%= select_tag(:sender_availability_id, options_from_collection_for_select(Slot.all, :id, :user_id, @match.sender_availability_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="recipient_availability_id">
      Recipient availability
    </label>

    <%= select_tag(:recipient_availability_id, options_from_collection_for_select(Slot.all, :id, :user_id, @match.recipient_availability_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="state_id">
      State
    </label>

    <input type="text" id="state_id" name="state_id" class="form-control" value="<%= @match.state_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create match
  </button>
</form>

<hr>

<a href="/matches">
  Go back
</a>

<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All matches
    </h1>

    <a href="/matches/new" class="btn btn-block btn-outline-secondary">
      Add a new match
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "match_templates/matches_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          Start
        </th>

        <th>
          End
        </th>

        <th>
          Sender availability
        </th>

        <th>
          Recipient availability
        </th>

        <th>
          State
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @matches.each do |match| %>
      <tr>
        <td>
          <%= match.id %>
        </td>

        <td>
          <%= match.date %>
        </td>

        <td>
          <%= match.start %>
        </td>

        <td>
          <%= match.end %>
        </td>

        <td>
          <% if match.sender_availability.present? %>
            <a href="/slots/<%= match.sender_availability.id %>">
              <%= match.sender_availability.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if match.recipient_availability.present? %>
            <a href="/slots/<%= match.recipient_availability.id %>">
              <%= match.recipient_availability.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= match.state_id %>
        </td>

        <td>
          <%= time_ago_in_words(match.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(match.updated_at) %> ago
        </td>

        <td>
          <a href="/matches/<%= match.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @matches, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

<!-- Form comment start -->
<form action="/create_comment_from_match" method="post">
<!-- Form comment end -->

  <!-- Label and input for match_id start -->
  <!-- Input for match_id start -->
  <input type="hidden" name="match_id" value="<%= @match.id %>">
  <!-- Input for match_id end -->

  <!-- Label and input for author_id start -->
  <div class="form-group">
    <label for="author_id">
      Author
    </label>

    <!-- Input for author_id start -->
    <input type="text" id="author_id" name="author_id" class="form-control" value="<%= @comment.author_id %>">
    <!-- Input for author_id end -->
  </div>
  <!-- Label and input for author_id end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <input type="text" id="body" name="body" class="form-control" value="<%= @comment.body %>">
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>

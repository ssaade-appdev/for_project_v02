<form action="/create_comment_from_match" method="post">

  <input type="hidden" name="match_id" value="<%= @match.id %>">

  <input type="hidden" name="author_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <input type="text" id="body" name="body" class="form-control" value="<%= @comment.body %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>

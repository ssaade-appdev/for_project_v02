<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recipient Matches

    <a data-toggle="collapse" href="#slot_recipient_matches_new_form">
      Add match
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @slot.recipient_matches.each do |match| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/matches/<%= match.id %>">
          <%= match.date %>
        </a>

        <a href="/delete_match_from_recipient_availability/<%= match.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="slot_recipient_matches_new_form">
        <%= render partial: "slot_templates/slot_recipient_matches_new_form" %>
      </div>
    </div>

  </ul>
</div>

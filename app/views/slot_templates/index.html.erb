<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All slots
    </h1>

    <a href="/slots/new" class="btn btn-block btn-outline-secondary">
      Add a new slot
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Date
        </th>

        <th>
          Start
        </th>

        <th>
          End
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @slots.each do |slot| %>
      <tr>
        <!-- Display slot.id start -->
        <td>
          <%= slot.id %>
        </td>
        <!-- Display slot.id end -->

        <!-- Display slot.user_id start -->
        <td>
          <% if slot.user.present? %>
            <a href="/users/<%= slot.user.id %>">
              <%= slot.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display slot.user_id end -->

        <!-- Display slot.date start -->
        <td>
          <%= slot.date %>
        </td>
        <!-- Display slot.date end -->

        <!-- Display slot.start start -->
        <td>
          <%= slot.start %>
        </td>
        <!-- Display slot.start end -->

        <!-- Display slot.end start -->
        <td>
          <%= slot.end %>
        </td>
        <!-- Display slot.end end -->

        <!-- Display slot.created_at start -->
        <td>
          <%= time_ago_in_words(slot.created_at) %> ago
        </td>
        <!-- Display slot.created_at end -->

        <!-- Display slot.updated_at start -->
        <td>
          <%= time_ago_in_words(slot.updated_at) %> ago
        </td>
        <!-- Display slot.updated_at end -->

        <td>
          <a href="/slots/<%= slot.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @slots, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

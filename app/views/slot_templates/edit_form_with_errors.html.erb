<% if @slot.errors.any? %>
  <% @slot.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit slot #<%= @slot.id %>
</h1>

<hr>

<form action="/update_slot/<%= @slot.id %>" method="post">


  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @slot.date %>">
  </div>

  <div class="form-group">
    <label for="start">
      Start
    </label>

    <input type="text" id="start" name="start" class="form-control" value="<%= @slot.start %>">
  </div>

  <div class="form-group">
    <label for="end">
      End
    </label>

    <input type="text" id="end" name="end" class="form-control" value="<%= @slot.end %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update slot
  </button>
</form>

<hr>

<a href="/slots">
  Go back
</a>

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit comment #<%= @comment.id %>
</h1>

<hr>

<form action="/update_comment/<%= @comment.id %>" method="post">

  <div class="form-group">
    <label for="match_id">
      Match
    </label>

    <%= select_tag(:match_id, options_from_collection_for_select(Match.all, :id, :date, @comment.match_id), :class => "form-control") %>
  </div>


  <div class="form-group">
    <label for="body">
      Body
    </label>

    <input type="text" id="body" name="body" class="form-control" value="<%= @comment.body %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
